{
  "name": "calcforge-electron",
  "version": "4.0.0",
  "description": "CalcForge - Advanced Calculator with Timecode, Unit Conversion, and Cross-Sheet References",
  "main": "electron/main.js",
  "homepage": "https://github.com/calcforge/calcforge-electron",
  "author": {
    "name": "CalcForge Team",
    "email": "support@calcforge.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run backend\" \"npm run electron-dev\"",
    "backend": "cd backend && python api_server.py",
    "electron-dev": "wait-on http://localhost:8000 && electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "electron test-electron.js",
    "test-backend": "cd backend && python test_backend.py"
  },
  "keywords": [
    "calculator",
    "timecode",
    "unit-conversion",
    "spreadsheet",
    "math",
    "desktop-app",
    "electron"
  ],
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.4",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.calcforge.calcforge-electron",
    "productName": "CalcForge",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "backend/**/*",
      "!backend/__pycache__/**/*",
      "!backend/*.pyc",
      "!**/*.map",
      "!**/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__/**/*",
          "!*.pyc"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/icon.ico",
      "publisherName": "CalcForge Team",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CalcForge"
    },
    "dmg": {
      "title": "CalcForge ${version}",
      "icon": "build/icons/icon.icns",
      "background": "build/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "calcforge",
      "repo": "calcforge-electron"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calcforge/calcforge-electron.git"
  },
  "bugs": {
    "url": "https://github.com/calcforge/calcforge-electron/issues"
  }
}
